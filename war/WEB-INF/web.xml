<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<!-- Servlets -->
	<servlet>
		<servlet-name>rpcServicesImpl</servlet-name>
		<servlet-class>org.eastway.echarts.server.RpcServicesImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>rpcServicesImpl</servlet-name>
		<url-pattern>/echarts/rpcServices</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>echarts.html</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>
			This resource provides the EW-EHR database connection.
		</description>
		<res-ref-name>
			jdbc/EWEHR
		</res-ref-name>
		<res-type>
			javax.sql.DataSource
		</res-type>
		<res-auth>
			Container
		</res-auth>
	</resource-ref>
</web-app>
