<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure class="org.mortbay.jetty.webapp.WebAppContext">
	<New id="EWEHR" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg></Arg>
		<Arg>java:comp/env/jdbc/EWEHR</Arg>
		<Arg>
			<New class="com.microsoft.sqlserver.jdbc.SQLServerDataSource">
				<Set name="user">echarts</Set>
				<Set name="password">echarts</Set>
				<Set name="databaseName">EW-EHR</Set>
				<Set name="ServerName">localhost</Set>
			</New>
		</Arg>
	</New>
</Configure>
