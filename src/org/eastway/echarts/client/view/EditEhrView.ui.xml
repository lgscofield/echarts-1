<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
  <ui:style>
    .border {
    	border-right: 1px solid LightBlue;
    }
    
    .inline {
    	display: inline;
    }
    
    .smallfont {
    	font-size: smaller;
    }
    
    .appointment {
    	height: 20px;
    	width: 120px;
    	color: black;
    	font-size: 105%;
    	text-decoration: underline;
    	padding: 10px;
    	border-top: dashed 1px LightBlue;
    	border-right: dashed 1px LightBlue;
    	border-left: dashed 1px LightBlue;
    }
    
    .margin {
    	margin: 10px;
    }
  </ui:style>
  <ui:with field='res' type='org.eastway.echarts.client.AgencyConstants' />
  <g:DockLayoutPanel unit='PX' ui:field="panel">
    <g:west size='100'>
      <g:Tree addStyleNames='{style.border}' ui:field='steps'></g:Tree>
    </g:west>

    <g:center>
      <g:TabLayoutPanel ui:field='wizard' barHeight='0'>
        <g:tab>
          <g:header>Step 1</g:header>
          <g:ScrollPanel>
            <g:HTMLPanel>
              <table>
                <tr>
                  <td>
                    <g:DecoratorPanel>
                      <g:DisclosurePanel>
                        <g:header>Click here if this is for a previous
                          patient</g:header>
                        <g:HTMLPanel ui:field='returningPatient'
                          visible='false' addStyleNames='{style.margin}'>
                          <table>
                            <tr>
                              <td>
                                Who did the patient see?
                              </td>
                              <td>
                                <g:TextBox ui:field='previousProvider'></g:TextBox>
                              </td>
                            </tr>
                            <tr>
                              <td>When was the patient seen?</td>
                              <td>
                                <d:DateBox ui:field='previousVisit'></d:DateBox>
                                (*Can return only if more than 90 days)
                              </td>
                            </tr>
                            <tr>
                              <td>
                                Recipient of
                                Case management services?
                              </td>
                              <td>
                                <g:CheckBox
                                  ui:field='isRecipientOfCaseManagementServices'>Yes</g:CheckBox>
                              </td>
                            </tr>
                          </table>
                        </g:HTMLPanel>
                      </g:DisclosurePanel>
                    </g:DecoratorPanel>
                  </td>
                </tr>
              </table>
              <table>
                <tr>
                  <td>Case Number: </td>
                  <td><g:TextBox ui:field='caseNumber' /></td>
                </tr>
                <tr>
                  <td>
                    First:
                  </td>
                  <td>
                    <g:TextBox ui:field='firstName' />
                  </td>
                </tr>
                <tr>
                  <td>
                    Last:
                  </td>
                  <td>
                    <g:TextBox ui:field='lastName' />
                  </td>
                </tr>
                <tr>
                  <td>
                    MI:
                  </td>
                  <td>
                    <g:TextBox ui:field='middleInitial' />
                  </td>
                </tr>
                <tr>
                  <td>
                    DOB:
                  </td>
                  <td>
                    <g:TextBox ui:field='dob' />
                  </td>
                </tr>
                <tr>
                  <td>
                    SSN#:
                  </td>
                  <td>
                    <g:TextBox ui:field='ssn' />
                  </td>
                </tr>
                <tr>
                  <td>
                    County:
                  </td>
                  <td>
                    <g:TextBox ui:field='county' />
                  </td>
                </tr>
                <tr>
                  <td>
                    Address:
                  </td>
                  <td>
                    <g:TextBox ui:field='address' />
                  </td>
                </tr>
                <tr>
                  <td>
                    Phone:
                  </td>
                  <td>
                    <g:TextBox ui:field='phone' />
                  </td>
                </tr>
                <tr>
                  <td>
                    Alt Phone:
                  </td>
                  <td>
                    <g:TextBox ui:field='altPhone' />
                  </td>
                </tr>
              </table>
              <p>
                Any family members who receive services at
                <g:HTML addStyleNames='{style.inline}' text='{res.agencyName}' />
                ?
                <g:CheckBox ui:field='familyReceiveServices'>Yes</g:CheckBox>
              </p>
            </g:HTMLPanel>
          </g:ScrollPanel>
        </g:tab>
        <g:tab>
          <g:header>Step 2</g:header>
          <g:ScrollPanel>
            <g:HTMLPanel>
              <p>
                Any current or social use of AOD?
                <g:CheckBox ui:field='aod'>YES</g:CheckBox>
              </p>
              <p>
                AOD treatment required or court ordered?
                <g:CheckBox ui:field='requiredAod'>YES</g:CheckBox>
              </p>
              <p>
                History of treatment?
                <g:CheckBox ui:field='historyOfTreatment'>Yes</g:CheckBox>
                &nbsp;(You are looking for pattern use and frequency for
                appropriate exclusion with referral.)
              </p>
              <p>
                Description
                <br />
                <g:TextArea ui:field='treatmentDescription'
                  width='700px' height='200px' />
              </p>
            </g:HTMLPanel>
          </g:ScrollPanel>
        </g:tab>
        <g:tab>
          <g:header>Step 3</g:header>
          <g:ScrollPanel>
            <g:HTMLPanel>
              <p>Pregnant?&nbsp;
                <g:CheckBox ui:field='isPregnant'>Yes</g:CheckBox>
              </p>
              <p>IV?&nbsp;
                <g:CheckBox ui:field='isIvUser'>Yes</g:CheckBox>
              </p>
              <p>Referred
                by&nbsp;
                <g:TextBox ui:field='referredBy' />
              </p>
              <p>Emergency
                Contact&nbsp;
                <g:TextBox ui:field='emergencyContact' />
                &nbsp;Phone number
                <g:TextBox ui:field='emergencyContactPhoneNumber' />
              </p>
              <p>Relationship
                to patient&nbsp;
                <g:TextBox ui:field='emergencyContactRelationshipToPatient' />
              </p>
              <p>Employed?&nbsp;
                <g:CheckBox ui:field='isEmployed'>Yes</g:CheckBox>
                &nbsp;Date last employed
                <g:TextBox ui:field='lastEmployedDate' />
              </p>
              <p>Insurance&nbsp;
                <g:TextBox ui:field='insuranceType' />
              </p>
              <p>
                Income
                <g:TextBox ui:field='income' />
              </p>
              <p>Desire
                to work?&nbsp;
                <g:CheckBox ui:field='hasDesireToWork'>Yes</g:CheckBox>
              </p>
              <p>Employment
                barriers?&nbsp;
                <g:CheckBox ui:field='hasEmploymentBarriers'>Yes</g:CheckBox>
              </p>
            </g:HTMLPanel>
          </g:ScrollPanel>
        </g:tab>
        <g:tab>
          <g:header>Step 4</g:header>
          <g:ScrollPanel>
            <g:HTMLPanel>
              <p>History
                of legal problems (i.e. current felonies)?&nbsp;
                <g:CheckBox ui:field='hasLegalProblems'>Yes</g:CheckBox>
                <br />
                <b class='{style.smallfont}'>Potential patient may benefit from referral
                  to BVR or Powernet (felonies).</b>
              </p>
              <p>
                Description
                <br />
                <g:TextArea ui:field='legalProblemsDescription'
                  width='700px' height='200px' />
              </p>
            </g:HTMLPanel>
          </g:ScrollPanel>
        </g:tab>
        <g:tab>
          <g:header>Step 5</g:header>
          <g:ScrollPanel>
            <g:HTMLPanel>
              <p>Currently
                receiving Social Security Disability for mental health
                reasons? (if so, eligible for CPST)&nbsp;
                <g:CheckBox ui:field='isReceivingSsdForMhReasons'>YES</g:CheckBox>
              </p>
              <p>Any
                recent visits to the ER or hospital?&nbsp;
                <g:CheckBox ui:field='hasRecentlyVisitedErOrHospital'>Yes</g:CheckBox>
                <br />
                What treatment was sought and received?
                <br />
                <g:TextArea ui:field='recentlyReceivedTreatment'
                  width='700px' height='200px' />
              </p>
              <p>
                Previous mental health (i.e., psychotropic medication,
                therapy, psychiatry, community mental health, case
                management) treatment
                <br />
                <g:TextArea ui:field='previousMentalHealthTreatment'
                  width='700px' height='200px' />
              </p>
              <p>
                Previous hospitalizations for mental health
                <br />
                <g:TextArea ui:field='previousMentalHealthHospitalizations'
                  width='700px' height='200px' />
              </p>
              <p>
                Current medications
                <br />
                <g:TextArea ui:field='currentMedications'
                  width='700px' height='200px' />
              </p>
              <p>Guardian&nbsp;
                <g:TextBox ui:field='guardian' />
              </p>
            </g:HTMLPanel>
          </g:ScrollPanel>
        </g:tab>
        <g:tab>
          <g:header>Step 6</g:header>
          <g:ScrollPanel>
            <g:FlowPanel>
              <g:HorizontalPanel>
                <g:HTMLPanel addStyleNames='{style.margin}'>
                  <b>First appointment offered</b>
                  &nbsp;
                  <div>
                    <g:Label addStyleNames='{style.appointment}'
                      ui:field='firstAppointmentOffered'></g:Label>
                  </div>
                  <d:DatePicker ui:field='firstAppointmentOfferedDatePicker' />
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames='{style.margin}'>
                  <b>First appointment taken</b>
                  &nbsp;
                  <div>
                    <g:Label addStyleNames='{style.appointment}'
                      ui:field='firstAppointmentTaken'></g:Label>
                  </div>
                  <d:DatePicker ui:field='firstAppointmentTakenDatePicker' />
                </g:HTMLPanel>
              </g:HorizontalPanel>
            </g:FlowPanel>
          </g:ScrollPanel>
        </g:tab>
        <g:tab>
          <g:header>Step 7</g:header>
          <g:ScrollPanel>
            <g:HTMLPanel>
              <p>
                Informed patient what services
                <g:HTML addStyleNames='{style.inline}' text='{res.agencyName}' />
                &nbsp;provides for GMH?
                <g:CheckBox ui:field='informedPatient'>Yes</g:CheckBox>
                <g:HTML text='{res.gmhServicesProvided}' />
              </p>
              <p>
                <g:HTML addStyleNames='{style.inline}' text='{res.agencyName}' />
                &nbsp;does not provide
                <g:HTML text='{res.gmhServicesNotProvided}' />
              </p>
              <p>
                <g:DecoratorPanel>
                  <g:DisclosurePanel>
                    <g:header>Click here to do an inappropriate referral</g:header>
                    <g:HTMLPanel addStyleNames='{style.margin}'>
                      <table>
                        <tr>
                          <td>
                            Referral Source
                            </td><td>
                            <g:TextBox ui:field='referralSource' />
                          </td>
                        </tr>
                        <tr>
                          <td>
                            Phone Number
                            </td><td>
                            <g:TextBox ui:field='referralSourcePhoneNumber' />
                          </td>
                        </tr>
                        <tr>
                          <td>
                            Service Request
                            </td><td>
                            <g:TextBox ui:field='serviceRequest' />
                          </td>
                        </tr>
                        <tr>
                          <td>
                            Reason denied
                            </td><td>
                            <g:TextBox ui:field='reasonDenied' />
                          </td>
                        </tr>
                        <tr>
                          <td>
                            Referred to
                            </td><td>
                            <g:TextBox ui:field='referredTo' />
                          </td>
                        </tr>
                      </table>
                    </g:HTMLPanel>
                  </g:DisclosurePanel>
                </g:DecoratorPanel>
              </p>
              <p>
                Other pertinent info
                <br />
                <g:TextArea ui:field='otherPertinentInfo'
                  width='700px' height='200px' />
              </p>
            </g:HTMLPanel>
          </g:ScrollPanel>
        </g:tab>
      </g:TabLayoutPanel>
    </g:center>
    <g:south size='30'>
      <g:FlowPanel>
        <g:Button ui:field='previous' enabled='false'>Previous</g:Button>
        <g:Button ui:field='next'>Next</g:Button>
        <g:Button ui:field='finish' enabled='false'>Finish</g:Button>
      </g:FlowPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>
