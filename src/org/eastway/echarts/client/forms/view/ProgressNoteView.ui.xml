<?xml version="1.0"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header1 {
			font-size: 115%;
		}

		.header2 {
			font-size: 105%;
			margin: 0;
		}

		.margin {
			margin-top: 15px;
			margin-right: 10px;
			margin-bottom: 15px;
		}

		.label {
			margin-top: 4px;
			margin-right: 10px;
		}

		.box {
			border: 1px solid LightGray;
		}

		.button {
			padding: 4px;
			margin-top: 5px;
			margin-right: 5px;
			margin-bottom: 5px;
			border: 1px solid LightGray;
			color: Gray;
			width: 90px;
		}

		.button:hover {
			color: black;
		}

		.tabpanel { }
	</ui:style>
	<g:TabLayoutPanel ui:field='tabPanel' barUnit='PX'
		barHeight='0'>
		<g:tab>
			<g:header>Step 1</g:header>
			<g:ScrollPanel height='100%'>
				<g:HTMLPanel>
					<h1 class='{style.header1}'>Progress
						Notes &mdash;
						<span ui:field="patientId" />
					</h1>
					<h2 class='{style.header2}'>Billing Information</h2>
					<br />
					<hr />
					<g:HorizontalPanel addStyleNames='{style.margin}'>
						<g:Label addStyleNames='{style.label}'>Service Date</g:Label>
						<g:TextBox addStyleNames='{style.box}' name="Date" />
					</g:HorizontalPanel>
					<g:HorizontalPanel addStyleNames='{style.margin}'>
						<g:Label addStyleNames='{style.label}'>Service Code</g:Label>
						<g:ListBox addStyleNames='{style.box}' ui:field="serviceCodes" />
					</g:HorizontalPanel>
					<g:HorizontalPanel addStyleNames='{style.margin}'>
						<g:HTMLPanel>
							<g:HorizontalPanel addStyleNames='{style.margin}'>
								<g:Label addStyleNames='{style.label}'>Start Time</g:Label>
								<g:TextBox addStyleNames='{style.box}' name='startTime' />
							</g:HorizontalPanel>
							<g:HorizontalPanel addStyleNames='{style.margin}'>
								<g:Label addStyleNames='{style.label}'>Duration</g:Label>
								<g:TextBox addStyleNames='{style.box}' name='duration' />
							</g:HorizontalPanel>
						</g:HTMLPanel>
					</g:HorizontalPanel>
					<g:HorizontalPanel addStyleNames='{style.margin}'>
						<g:Label addStyleNames='{style.label}'>Location 1</g:Label>
						<g:ListBox ui:field='location1'/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label addStyleNames='{style.label}'>Location 2</g:Label>
						<g:ListBox ui:field='location2'/>
					</g:HorizontalPanel>
					<g:HorizontalPanel addStyleNames='{style.margin}'>
						<g:Label addStyleNames='{style.label}'>Cost Center</g:Label>
						<g:ListBox ui:field='program'/>
					</g:HorizontalPanel>
					<g:HorizontalPanel addStyleNames='{style.margin}'>
							<g:Label addStyleNames='{style.label}'>Modifier 1</g:Label>
							<g:ListBox ui:field='modifier1'/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
							<g:Label addStyleNames='{style.label}'>Modifier 2</g:Label>
							<g:ListBox ui:field='modifier2'/>
					</g:HorizontalPanel>
					<g:Button ui:field='next' addStyleNames='{style.button}'>Next</g:Button>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:tab>
		<g:tab>
			<g:header>Step 2</g:header>
			<g:ScrollPanel height='100%'>
				<g:FlowPanel>
					<g:HTMLPanel>
						<h1 class='{style.header1}'><span ui:field='noteName'></span></h1>
						<hr />
					</g:HTMLPanel>
					<g:FlowPanel ui:field="progressNoteBody" />
					<g:Button ui:field='previous' addStyleNames='{style.button}'>Previous</g:Button>
					<g:Button ui:field='finish' addStyleNames='{style.button}'>Finish</g:Button>
				</g:FlowPanel>
			</g:ScrollPanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder>
