<?xml version="1.0"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:e="urn:import:org.eastway.echarts.client.view">
  <ui:style type="org.eastway.echarts.dashboard.client.AdministratorDashboard.Style">
	.alerts {
		border-top: 1px solid SkyBlue;
	}
  </ui:style>
  <g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
    <g:north size="6">
      <e:TopPanelView ui:field="top" />
    </g:north>
    <g:center>
      <g:TabLayoutPanel ui:field="tabLayoutPanel" barUnit="EM" barHeight="2.6">
        <g:tab>
          <g:header>Dashboard</g:header>
          <g:DockLayoutPanel unit='EM'>
            <g:west size='20'>
              <g:ScrollPanel ui:field="patientList" />
            </g:west>
          </g:DockLayoutPanel>
        </g:tab>
      </g:TabLayoutPanel>
    </g:center>
    <g:south size="8">
      <g:HTMLPanel addStyleNames="{style.alerts}">
        <b>Alerts</b>
        <g:FlowPanel ui:field="alertsPanel"/>
      </g:HTMLPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>
