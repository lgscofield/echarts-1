<?xml version="1.0"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:org.eastway.echarts.client.view">
  <ui:style
    type="org.eastway.echarts.dashboard.client.AdministratorDashboard.Style">
      .alerts {
      	border-top: 1px solid SkyBlue;
      }

	.productivity {
		border: 1px dotted Green;
		margin: 5px;
		text-align: center;
	}

	.green {
		background-color:green;
	}

	.red {
		background-color:red;
	}

	.yellow {
		background-color:yellow;
	}

	.gmhIntake {
		cursor: hand;
	}
    </ui:style>
  <g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
    <g:north size="6">
      <e:TopPanelView ui:field="top" />
    </g:north>
    <g:center>
      <g:TabLayoutPanel ui:field="tabLayoutPanel"
        barUnit="EM" barHeight="2.6">
        <g:tab>
          <g:header>Dashboard</g:header>
          <g:DockLayoutPanel unit='PCT'>
            <g:west size='22'>
              <g:ScrollPanel ui:field="patientList" />
            </g:west>
            <g:west size='40'>
              <g:FlowPanel>
                <g:HTMLPanel><div class='{style.productivity}'>Your productivity: <span ui:field='productivity'></span></div></g:HTMLPanel>
                <g:Anchor styleName='{style.gmhIntake}' ui:field='gmhIntake'>New GMH Intake</g:Anchor>
              </g:FlowPanel>
            </g:west>
            <g:east size='38'>
              <g:FlowPanel ui:field='scheduler' />
            </g:east>
          </g:DockLayoutPanel>
        </g:tab>
      </g:TabLayoutPanel>
    </g:center>
    <g:south size="8">
      <g:HTMLPanel addStyleNames="{style.alerts}">
        <b>Alerts</b>
        <g:FlowPanel ui:field="alertsPanel" />
      </g:HTMLPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>
