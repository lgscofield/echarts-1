<?xml version="1.0"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
	.portlet {
		float: left;
		padding: 5px;
		margin: 5px;
		border: 1px solid SkyBlue;
	}

	.alerts {
		border-top: 1px solid SkyBlue;
	}

	.padding {
		padding: 5px;
	}
  </ui:style>
  <g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
    <g:north size="6">
      <g:FlowPanel ui:field="topPanel"/>
    </g:north>
    <g:center>
      <g:TabLayoutPanel ui:field="tabLayoutPanel" barUnit="EM" barHeight="2.6">
        <g:tab>
          <g:header>Dashboard</g:header>
          <g:FlowPanel>
            <g:HTMLPanel addStyleNames="{style.portlet}">
              <b>Patient List</b>
              <g:ScrollPanel ui:field="patientListPanel" height="225px" width="215px"/>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.portlet}">
              <b>Productivity</b>
              <g:FlowPanel addStyleNames="{style.padding}" ui:field="productivityPanel"/>
            </g:HTMLPanel>
          </g:FlowPanel>
        </g:tab>
      </g:TabLayoutPanel>
    </g:center>
    <g:south size="8">
      <g:HTMLPanel addStyleNames="{style.alerts}">
        <b>Alerts</b>
        <g:FlowPanel ui:field="alertsPanel"/>
      </g:HTMLPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>
