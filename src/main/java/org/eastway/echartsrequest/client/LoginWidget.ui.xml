<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.right {
			float: right;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.right}">
		<table>
			<tr>
				<td><g:Hyperlink title='Edit your settings' targetHistoryToken='profile:' ui:field="userName" /></td>
				<td>&mdash;</td>
				<td><g:Anchor ui:field="logout" href='#'>logout</g:Anchor></td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder>
