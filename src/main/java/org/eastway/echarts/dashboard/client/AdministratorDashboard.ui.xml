<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:org.eastway.echarts.client.view">
  <ui:style
    type="org.eastway.echarts.dashboard.client.AdministratorDashboard.Style">
      .alerts {
      	border-top: 1px solid SkyBlue;
      }
      
      .productivity {
      	border: 1px dotted Green;
      	margin: 5px;
      	text-align: center;
      }
      
      .green {
      	background-color: green;
      }
      
      .red {
      	background-color: red;
      }
      
      .yellow {
      	background-color: yellow;
      }
      
      .anchoricon {
      	cursor: pointer;
      	float:left;
		background-image: url('css/images/ui-icons_6da8d5_256x240.png');
		background-position: -32px -80px;
		height: 16px;
		width: 16px;
		background-repeat: no-repeat;
		overflow: hidden;
      }
      
      .anchor:hover {
      	text-decoration: underline;
      	cursor: pointer;
      }
      
      .margin {
      	margin: 10px;
      }
      
      .floatleft>* {
      	float: left;
      }
    </ui:style>
  <g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
    <g:north size="6">
      <e:TopPanelView ui:field="top" />
    </g:north>
    <g:center>
      <g:TabLayoutPanel ui:field="tabLayoutPanel"
        barUnit="EM" barHeight="2.6">
        <g:tab>
          <g:header>Dashboard</g:header>
          <g:DockLayoutPanel unit='PCT'>
            <g:west size='25'>
              <g:FlowPanel>
              <g:HorizontalPanel>
                <g:FlowPanel styleName='{style.anchoricon}'/>
                <g:Anchor addStyleNames='{style.anchor}' ui:field="patientList">Open Chart</g:Anchor>
                </g:HorizontalPanel>
<!--                <g:HorizontalPanel>-->
<!--                <g:FlowPanel styleName='{style.anchoricon}'/>-->
<!--				<g:Anchor addStyleNames='{style.anchor}' ui:field='gmhIntake'>New Chart</g:Anchor>-->
<!--              </g:HorizontalPanel>-->
              </g:FlowPanel>
            </g:west>
            <g:west size='40'>
              <g:FlowPanel>
                <g:HTMLPanel>
<!--                  <div class='{style.productivity}'>-->
<!--                    Your productivity:-->
<!--                    <span ui:field='productivity'></span>-->
<!--                  </div>-->
                </g:HTMLPanel>
              </g:FlowPanel>
            </g:west>
            <g:east size='35'>
              <g:FlowPanel ui:field='scheduler' />
            </g:east>
          </g:DockLayoutPanel>
        </g:tab>
      </g:TabLayoutPanel>
    </g:center>
    <g:south size="8">
      <g:HTMLPanel addStyleNames="{style.alerts}">
        <b>Alerts</b>
        <g:FlowPanel ui:field="alertsPanel" />
      </g:HTMLPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>
