<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a='urn:import:com.google.gwt.user.client.ui'>
	<ui:style type="org.eastway.echarts.client.scaffold.ScaffoldDesktopShell.Style">
		.alerts {
			border-top: 1px solid SkyBlue;
		}
		
		.productivity {
			border: 1px dotted Green;
			margin: 5px;
			text-align: center;
		}
		
		.green {
			background-color: green;
		}
		
		.red {
			background-color: red;
		}
		
		.yellow {
			background-color: yellow;
		}
		
		.anchor:hover {
			text-decoration: underline;
			cursor: pointer;
		}
		
		.margin {
			margin: 10px;
		}
		
		.floatleft>* {
			float: left;
		}
		
		@sprite .banner {
			gwt-image: 'logo';
		}
		
		.left {
			float: left;
		}
		
		.right {
			float: right;
		}
		
		.italics {
			font-style: italic;
		}
		
		.button {
			padding: 3px;
			margin: 4px 2px 2px 2px;
		}
		
		.searchbox {
			margin-top: 2px;
			padding: 6px;
			width: 220px;
		}
		
		.top {
			margin-top: 10px;
		}

		.label:hover {
			cursor: pointer;
			background-color: #dfeffc;
			width: 100%;
		}
		.content {
			position: relative;
			border: 1px solid #ddf;
			overflow-y: auto;
			overflow-x: hidden;
			-moz-border-radius-bottomleft: 10px;
			-webkit-border-bottom-left-radius: 10px;
			-moz-border-radius-bottomright: 10px;
			-webkit-border-bottom-right-radius: 10px;
		}
	</ui:style>
	<ui:image field="logo" src="../../style/client/echarts-logo.gif"/>
	<g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
		<g:north size="6">
			<g:FlowPanel>
				<g:FlowPanel>
					<a:NotificationMole animationDuration='0' message='Loading ...' ui:field='mole'></a:NotificationMole>
				</g:FlowPanel>
				<g:HorizontalPanel width="100%">
					<g:FlowPanel addStyleNames="{style.banner} {style.left}" />
					<g:FlexTable ui:field='currentPatientData'
						addStyleNames='{style.left} {style.margin} {style.italics}'/>
					<g:VerticalPanel addStyleNames="{style.right}">
						<g:HorizontalPanel addStyleNames="{style.right}">
							<g:Hyperlink title='Edit your settings' targetHistoryToken='ProfilePlace:' ui:field="username" />
							<g:HTML>&nbsp;&mdash;&nbsp;</g:HTML>
							<g:Hyperlink ui:field="logoutButton" targetHistoryToken=''>Logout</g:Hyperlink>
						</g:HorizontalPanel>
						<g:HorizontalPanel ui:field="patientSearch" addStyleNames="{style.right} {style.top}">
							<g:FlowPanel ui:field='patientIdBox'/>
							<g:Button ui:field='patientSearchButton' addStyleNames='{style.button}'>Search</g:Button>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:HorizontalPanel>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:FlowPanel styleName="{style.content}">
				<g:SimplePanel ui:field="master"></g:SimplePanel>
			</g:FlowPanel>
		</g:center>
		<g:west size="15">
			<g:SimplePanel ui:field="details"></g:SimplePanel>
		</g:west>
	</g:DockLayoutPanel>
</ui:UiBinder>
