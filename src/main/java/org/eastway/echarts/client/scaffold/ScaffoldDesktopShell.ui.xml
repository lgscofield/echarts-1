<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a='urn:import:com.google.gwt.user.client.ui'
	xmlns:r="urn:import:org.eastway.echartsrequest.client"
	xmlns:e="urn:import:org.eastway.echarts.client.ui">
	<ui:style type="org.eastway.echarts.client.scaffold.ScaffoldDesktopShell.Style">
		@sprite .banner {
			gwt-image: 'logo';
		}
		.left {
			float: left;
		}
		.right {
			float: right;
		}
		.content {
			position: relative;
			border-top: 5px solid #315a8c;
			border-left: 5px solid #315a8c;
			overflow-y: auto;
			overflow-x: auto;
		}
		.sidebar {
			border-top: 5px solid #315a8c;
		}
		.alertMessage {
			border-top: 1px solid red;
			border-bottom: 1px solid red;
			width: 100%;
			text-align: center;
			background-color: LightYellow;
		}
	</ui:style>
	<ui:image field="logo" src="../style/images/echarts-logo.gif"/>
	<g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
		<g:north size="7.1">
			<g:FlowPanel>
				<g:FlowPanel>
					<a:NotificationMole animationDuration='0' message='Loading ...' ui:field='mole'></a:NotificationMole>
				</g:FlowPanel>
				<g:HorizontalPanel width="100%">
					<g:FlowPanel addStyleNames="{style.banner} {style.left}" />
					<g:SimplePanel ui:field="currentEhrPanel" />
					<g:VerticalPanel addStyleNames="{style.right}">
						<r:LoginWidget ui:field="loginWidget" />
						<e:PatientSearchWidget ui:field="patientSearchWidget" />
					</g:VerticalPanel>
				</g:HorizontalPanel>
				<g:HTMLPanel>
					<div ui:field="alertMessageContainer">
						<span ui:field="alertMessage" />
					</div>
				</g:HTMLPanel>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:FlowPanel styleName="{style.content}">
				<g:SimplePanel ui:field="master"></g:SimplePanel>
			</g:FlowPanel>
		</g:center>
		<g:west size="13">
			<g:FlowPanel styleName="{style.sidebar}">
				<g:SimplePanel ui:field="details"></g:SimplePanel>
			</g:FlowPanel>
		</g:west>
	</g:DockLayoutPanel>
</ui:UiBinder>
