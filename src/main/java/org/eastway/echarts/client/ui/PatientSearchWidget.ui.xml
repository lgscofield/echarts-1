<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.eastway.echarts.client.ui.PatientSearchWidget.Style">
		.right {
			float: right;
		}
		.top {
			margin-top: 10px;
		}
		.button {
			padding: 2px;
			margin: 4px 2px 2px 0px;
			height: 24px;
			width: 80px;
		}
		.searchbox {
			margin: 2px 0px 0px 0px;
			padding: 2px;
			width: 271px;
			border: 2px solid #315a8c;
		}
	</ui:style>
	<g:HTMLPanel ui:field="patientSearch" addStyleNames="{style.right} {style.top}">
		<table border='0' cellspacing='0' cellpadding='0'>
			<tr>
				<td><g:FlowPanel ui:field='patientIdBox' /></td>
				<td><g:Button ui:field='patientSearchButton' addStyleNames='{style.button}'>Search</g:Button></td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 