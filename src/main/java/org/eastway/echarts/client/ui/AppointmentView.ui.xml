<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.display {
			display:none;
		}
		.table td {
			border: 1px solid LightGray;
		}
	</ui:style>
	<g:HTMLPanel>
		<span ui:field="error" />
		<g:VerticalPanel>
			<g:HorizontalPanel styleName='{style.display}'>
				<g:Button ui:field='newest'>Newest</g:Button>
				<g:Button ui:field='newer'>Newer</g:Button>
				<g:Button ui:field='older'>Older</g:Button>
				<g:Button ui:field='oldest'>Oldest</g:Button>
				<g:HTML><span ui:field="counter" /></g:HTML>
			</g:HorizontalPanel>
			<g:FlexTable addStyleNames='{style.table}' ui:field='table' />
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 