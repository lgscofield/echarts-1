<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:org.eastway.echarts.client.view" xmlns:a='urn:import:com.google.gwt.app.client'>
	<ui:style type="org.eastway.echarts.client.view.DashboardView.Style">
		.alerts {
			border-top: 1px solid SkyBlue;
		}
		
		.productivity {
			border: 1px dotted Green;
			margin: 5px;
			text-align: center;
		}
		
		.green {
			background-color: green;
		}
		
		.red {
			background-color: red;
		}
		
		.yellow {
			background-color: yellow;
		}
		
		.anchor:hover {
			text-decoration: underline;
			cursor: pointer;
		}
		
		.margin {
			margin: 10px;
		}
		
		.floatleft>* {
			float: left;
		}
		
		@sprite .banner {
			gwt-image: 'logo';
		}
		
		.left {
			float: left;
		}
		
		.right {
			float: right;
		}
		
		.italics {
			font-style: italic;
		}
		
		.button {
			padding: 3px;
			margin: 4px 2px 2px 2px;
		}
		
		.searchbox {
			margin-top: 2px;
			padding: 6px;
			width: 220px;
		}
		
		.top {
			margin-top: 10px;
		}

		.label:hover {
			cursor: pointer;
			background-color: #dfeffc;
			width: 100%;
		}
	</ui:style>
	<ui:image field="logo" src="../../style/client/echarts-logo.gif"/>
	<g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
		<g:north size="6">
			<g:FlowPanel>
				<g:FlowPanel>
					<a:NotificationMole animationDuration='0' message='Loading ...' ui:field='mole'></a:NotificationMole>
				</g:FlowPanel>
				<g:HorizontalPanel width="100%">
					<g:FlowPanel addStyleNames="{style.banner} {style.left}" />
					<g:FlexTable ui:field='currentPatientData'
						addStyleNames='{style.left} {style.margin} {style.italics}'/>
					<g:VerticalPanel addStyleNames="{style.right}">
						<g:HorizontalPanel addStyleNames="{style.right}">
							<g:Hyperlink title='Edit your settings' targetHistoryToken='' ui:field="username" />
							<g:HTML>&nbsp;&mdash;&nbsp;</g:HTML>
							<g:Hyperlink ui:field="logoutButton" targetHistoryToken=''>Logout</g:Hyperlink>
						</g:HorizontalPanel>
						<g:HorizontalPanel ui:field="patientSearch" addStyleNames="{style.right} {style.top}">
							<g:FlowPanel ui:field='patientIdBox'/>
							<g:Button ui:field='patientSearchButton' addStyleNames='{style.button}'>Search</g:Button>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:HorizontalPanel>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:TabLayoutPanel ui:field="tabLayoutPanel" barUnit="EM"
				barHeight="2.6">
				<g:tab>
					<g:header>
						Dashboard
					</g:header>
					<g:SplitLayoutPanel>
						<g:north size="80">
							<g:HTMLPanel>
								<table width="100%" style="border:1px solid black;" cellspacing="0" cellpadding="0">
									<tr>
										<td style="border-bottom:1px solid black; text-align:left;"><b>Productivity:</b> &nbsp;<span ui:field='productivity'/></td>
										<td style="border-bottom:1px solid black;text-align:right;"> Current projection for bonus:&nbsp;<span ui:field='bonusProjection'/></td>
									</tr>
									<tr>
										<td height="40px" colspan="2">
											<table ui:field="graph" cellspacing="0" cellpadding="0">
												<tr>
													<td height="40px" ui:field='graphColor'></td>
												</tr>
											</table>
											<table width="100%" style="table-layout:fixed; border-top: 1px solid black;" cellspacing="0" cellpadding="0">
												<tr style="text-align:center; font:9pt Tahoma;">
													<td>10</td>	<td>20</td>	<td>30</td>	<td>40</td>	<td>50</td>	<td>60</td>	<td>70</td>	<td>80</td>	<td>90</td>	<td>100</td><td>110</td><td>120</td>
												</tr>
											</table>
										</td>
									</tr>
								</table>
								<table style="position: relative; top:-60px; table-layout:fixed;" width="100%" cellspacing="0" cellpadding="0">
									<tr>
										<td height="40px" style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td style="border-right:1px solid black;">&nbsp;</td>
										<td></td>
									</tr>
								</table>
							</g:HTMLPanel>
						</g:north>
						<g:west size='115'>
							<g:HTMLPanel>
								<b>Links</b>
								<ul style='margin-top:0px;'>
									<li>
										<g:Hyperlink ui:field='tickler' targetHistoryToken=''>Tickler</g:Hyperlink>
									</li>
									<li>
										<g:Hyperlink ui:field='signature' targetHistoryToken=''>Signatures</g:Hyperlink>
									</li>
								</ul>
							</g:HTMLPanel>
						</g:west>
					</g:SplitLayoutPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
