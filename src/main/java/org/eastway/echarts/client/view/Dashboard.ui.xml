<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:org.eastway.echarts.client.view">
	<ui:style type="org.eastway.echarts.client.view.DashboardView.Style">
		.alerts {
			border-top: 1px solid SkyBlue;
		}
		
		.productivity {
			border: 1px dotted Green;
			margin: 5px;
			text-align: center;
		}
		
		.green {
			background-color: green;
		}
		
		.red {
			background-color: red;
		}
		
		.yellow {
			background-color: yellow;
		}
		
		.anchor:hover {
			text-decoration: underline;
			cursor: pointer;
		}
		
		.margin {
			margin: 10px;
		}
		
		.floatleft>* {
			float: left;
		}
		
		@sprite .banner {
			gwt-image: 'logo';
		}
		
		.left {
			float: left;
		}
		
		.right {
			float: right;
		}
		
		.italics {
			font-style: italic;
		}
		
		.button {
			padding: 3px;
			margin: 4px 2px 2px 2px;
		}
		
		.searchbox {
			margin-top: 6px;
			padding: 6px;
			width: 220px;
		}
		
		.logout {
			text-decoration: none;
			margin-left: 5px;
		}
		
		.logout:hover {
			cursor: pointer;
			border-bottom: 1px dotted black;
		}
		
		.top {
			margin-top: 10px;
		}
	</ui:style>
	<ui:image field="logo" src="../../client/images/echarts-logo.gif"/>
	<g:DockLayoutPanel unit="EM" ui:field="dockLayoutPanel">
		<g:north size="6">
			<g:FlowPanel>
				<g:FlowPanel addStyleNames="{style.banner} {style.left}" />
				<g:Anchor ui:field="logoutButton" addStyleNames="{style.right} {style.logout}">Logout</g:Anchor>
				<g:FlowPanel ui:field="patientSearch" addStyleNames="{style.right} {style.top}">
					<g:SuggestBox ui:field='patientIdBox' addStyleNames='{style.searchbox}'/>
					<g:Button ui:field='patientSearchButton' addStyleNames='{style.button}'>Search</g:Button>
				</g:FlowPanel>
				<g:FlowPanel ui:field='currentPatientData'
					addStyleNames='{style.left} {style.margin} {style.italics}' />
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:TabLayoutPanel ui:field="tabLayoutPanel" barUnit="EM"
				barHeight="2.6">
				<g:tab>
					<g:customHeader>
						<g:Hyperlink targetHistoryToken="dashboard">Dashboard</g:Hyperlink>
					</g:customHeader>
					<g:SplitLayoutPanel>
						<g:west size='250'>
							<g:ScrollPanel ui:field='patientListPanel' />
						</g:west>
						<g:east size='250'>
							<g:FlowPanel ui:field='scheduler' />
						</g:east>
					</g:SplitLayoutPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
		<!--    <g:south size="8">-->
		<!--      <g:HTMLPanel addStyleNames="{style.alerts}">-->
		<!--        <b>Alerts</b>-->
		<!--        <g:FlowPanel ui:field="alertsPanel" />-->
		<!--      </g:HTMLPanel>-->
		<!--    </g:south>-->
	</g:DockLayoutPanel>
</ui:UiBinder>
