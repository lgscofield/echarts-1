<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style type="org.eastway.echarts.client.view.TopPanelView.ButtonStyle">
	@sprite .banner {
		gwt-image: 'logo';
	}

	.left {
		float: left;
	}

	.right {
		float: right;
	}

	.margin {
		margin:10px;
	}

	.italics {
		font-style: italic;
	}

	.button {
		padding: 3px;
		margin: 4px 2px 2px 2px;
	}

	.searchbox {
		margin-top: 6px;
		padding: 6px;
		width: 220px;
	}

	.logout {
		text-decoration:none;
		margin-left: 5px;
	}

	.logout:hover {
		cursor: pointer;
		border-bottom:1px dotted black;
	}

	.top {
		margin-top: 10px;
	}
  </ui:style>
  <ui:image field="logo" src="../images/echarts-logo.gif"/>
  <g:FlowPanel>
    <g:FlowPanel addStyleNames="{style.banner} {style.left}"/>
    <g:Anchor ui:field="logoutButton" addStyleNames="{style.right} {style.logout}">Logout</g:Anchor>
    <g:FlowPanel ui:field="patientSearch" addStyleNames="{style.right} {style.top}"/>
    <g:FlowPanel ui:field='currentPatientData' addStyleNames='{style.left} {style.margin} {style.italics}' />
  </g:FlowPanel>
</ui:UiBinder>
