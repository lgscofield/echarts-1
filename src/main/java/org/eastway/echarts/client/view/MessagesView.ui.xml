<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .h {
    	float: right;
    }
    .newMessage {
    	padding: 2px;
    	margin: 5px;
    }
  </ui:style>
  <g:LayoutPanel>
    <g:layer>
	    <g:DialogBox ui:field="db" visible='false' modal="false">
	      <g:FlowPanel>
	        <g:RichTextArea ui:field="message" width="400px" height="400px" />
	        <g:FlowPanel>
	          <g:FlowPanel addStyleNames="{style.h}">
	            <g:ListBox ui:field="messageTypes" />
	            <g:Button ui:field="saveButton">Save</g:Button>
	            <g:Button ui:field="closeButton">Close</g:Button>
	          </g:FlowPanel>
	        </g:FlowPanel>
	      </g:FlowPanel>
	    </g:DialogBox>
    </g:layer>
  	<g:layer top='0px' height='35px'>
  		<g:Button addStyleNames='{style.newMessage}' width='100px' height='25px' ui:field="add">New Message</g:Button>
  	</g:layer>
  	<g:layer top='45px' bottom='20px'>
		<g:ScrollPanel>
	    	<g:VerticalPanel ui:field="messages" />
	    </g:ScrollPanel>
	</g:layer>
  </g:LayoutPanel>
</ui:UiBinder>
